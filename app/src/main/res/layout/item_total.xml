<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffcfc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/item_total_linly1"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/out"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/show_page_blue"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="VS"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/in"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/show_page_blue"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/item_total_linly1"
        android:id="@+id/item_total_linly2"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_total_out"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_total_in"
            android:gravity="center"
            android:textSize="18sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_total_time"
        android:layout_below="@id/item_total_linly2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:drawableStart="@mipmap/time"
        android:drawablePadding="12dp"
        android:textSize="18sp"
        android:layout_marginStart="48dp"
        />

</RelativeLayout>